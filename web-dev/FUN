<script>
let intensity = 0;
let autoAttack = null;

function padhLe() {
    const msg = document.getElementById("message");
    intensity++;

    msg.classList.remove("active");
    void msg.offsetWidth;
    msg.classList.add("active");

    document.body.style.background = `
        radial-gradient(
            circle at center,
            rgb(${60 + intensity*10}, 0, 0),
            #000
        )
    `;

    document.body.classList.remove("screen-shake");
    void document.body.offsetWidth;
    document.body.classList.add("screen-shake");

    msg.style.transform = `
        translate(${random(-20,20)}px, ${random(-10,10)}px)
        scale(${1 + intensity*0.03})
    `;

    msg.textContent = intensity < 3
        ? "PADH LE ðŸ“š"
        : intensity < 6
        ? "AB PADH LE ðŸ˜¡"
        : "PHONE RAKH AUR PADH ðŸ”¥";

    if (intensity === 3 && !autoAttack) {
        autoAttack = setInterval(() => {
            msg.classList.remove("active");
            void msg.offsetWidth;
            msg.classList.add("active");
        }, 2500);
    }
}

function random(min, max) {
    return Math.floor(Math.random() * (max - min + 1)) + min;
}

document.addEventListener("visibilitychange", () => {
    document.title = document.hidden ? "PADH LE ðŸ˜ˆ" : "Focus Mode";
});
</script>

